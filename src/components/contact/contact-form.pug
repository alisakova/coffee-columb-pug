section.contact-form
  .container
    form(id="contact_form").contact-form__form.form
      .form__item
        label(for="name").form__label Имя
        input(type="text", id="name", name="name", placeholder="Иван Иванов", required).form__input 
      .form__item
        label(for="tel").form__label Телефон
        input(type="tel", id="tel", tel="te;", placeholder="+7 (123) 456-78-90", required).form__input 
      .form__item
        label(for="message").form__label Вопрос
        textarea(id="question", name="message", required).form__textarea
      button(type="submit").btn.btn_blue Отправить
    div(id="response").contact-form__answer
